# Database
DATABASE_URL=postgresql://username:password@host:5432/database_name

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:5200

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Groq API
GROQ_API_KEY=your-groq-api-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:5200
# PRODUCTION: Change to https://planmynexttravel.com (or your actual domain)

NEXT_PUBLIC_MAX_ANONYMOUS_TRIPS=3

# Google Maps API (for trip map visualization)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Affiliate Partner IDs
# These are used to generate booking links with tracking for commission earnings

# Agoda Affiliate ID (for hotel bookings in Asia)
# Sign up: https://partners.agoda.com/
NEXT_PUBLIC_AGODA_AFFILIATE_ID=your-agoda-affiliate-id

# Booking.com Affiliate ID (for hotel bookings globally)
# Sign up: https://www.booking.com/affiliate
NEXT_PUBLIC_BOOKING_AFFILIATE_ID=your-booking-affiliate-id

# Expedia Affiliate ID (for alternative hotel comparison)
# Sign up: https://welcome.expediagroup.com/en/affiliate
NEXT_PUBLIC_EXPEDIA_AFFILIATE_ID=your-expedia-affiliate-id

# Skyscanner Affiliate ID (for flight price comparison)
# Sign up: https://partners.skyscanner.net/
NEXT_PUBLIC_SKYSCANNER_AFFILIATE_ID=your-skyscanner-affiliate-id

# GetYourGuide Partner ID (for activities and tours globally)
# Sign up: https://partner.getyourguide.com/
NEXT_PUBLIC_GETYOURGUIDE_PARTNER_ID=your-getyourguide-partner-id

# Klook Affiliate ID (for activities and tours in Asia)
# Sign up: https://affiliate.klook.com/
NEXT_PUBLIC_KLOOK_AFFILIATE_ID=your-klook-affiliate-id